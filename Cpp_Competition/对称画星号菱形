#include<bits/stdc++.h>
using namespace std;
using ll=long long;
using pii=pair<int,int>;



int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    int n;
    cin >> n;
    int mid = n / 2;

    for (int i = 0; i < n; ++i) {
        int space = abs(i - mid);
        int stars = n - 2 * space;
        cout << string(space, ' ') << string(stars, '*') << '\n';
    }

    return 0;
}