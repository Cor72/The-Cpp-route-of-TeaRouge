int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    ll N;
    cin>>N;
    while(N--)
    {
    	 ll n;
    cin>>n;
    ll a;
    cin>>a;
    ll b;
    cin>>b;
    
    for(ll i=1;i<=n-b+1;i++)
    {
    	if(i*2==n+b)
    	{
    		for(ll j=1;j<=n-a+1;j++)
    		{
    			if(j>i||j+a<i+b)
    			{
    				cout<<"yes";
    				goto end;
    			}
    			else if(2*j==n+b)
    			{
    				cout<<"yes";
    				goto end;
    			}
    		}
    	}
    }
    cout<<"NO";
    end:
    ;
    }
    return 0;
}